<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_address"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="20dp"
        android:textSize="17dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/gray"
        android:text="所在地"/>
    <TextView
        android:id="@+id/tv_real_address"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="40dp"
        android:textSize="17dp"
        android:layout_alignTop="@+id/tv_address"
        android:layout_toRightOf="@+id/tv_address"
        android:textColor="@color/black"
        android:text="泰安"/>
    <ImageView
        android:id="@+id/iv_separator"
        android:layout_below="@+id/tv_real_address"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/gray"
        />
    <TextView
        android:id="@+id/tv_basic_information_more"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="17dp"
        android:layout_below="@+id/iv_separator"
        android:textColor="@color/gray"
        android:text="更多基本资料"/>
</RelativeLayout>